<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .cart-table th, .cart-table td {
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center">Shopping Cart</h2>
    <div id="cart-items">
      <% if (cart && cart.items.length > 0) { %>
        <table class="table table-striped cart-table">
          <thead>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Total</th>
            </tr>
          </thead>
          <% cart.items.forEach(item => { %>
            <tr>
              <td><%= item.productId.name %></td>
              <td><%= item.quantity %></td>
              <td>₹ <%= item.productId.price.toFixed(2) %></td>
              <td>₹ <%= (item.productId.price * item.quantity).toFixed(2) %></td>
            </tr>
          <% }) %>
        </table>
        <div style="display: flex;">
        <form action="/cart/order" method="POST">
          <button type="submit" class="btn btn-primary">Place Order</button>
        </form>
        <a href="/product/viewProduct" style="margin-left: 10px;" class="btn btn-info">View Products</a>
      </div>
      <% } else { %>
    
        <p class="text-center">Your cart is empty.</p>
        <div style="display: flex;justify-content: center;">
        <a href="/product/viewProduct" class="btn btn-info text-center">View Products</a></div>
      <% } %>
    
  </div>
</body>
</html>
